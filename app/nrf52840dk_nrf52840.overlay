/*
 * Simple Device Tree Overlay for nRF52840DK
 * 
 * This overlay provides basic configuration for:
 * - USB console
 * - GPIO for LEDs and button
 */

/ {
    chosen {
        zephyr,console = &uart0;
        zephyr,shell-uart = &uart0;
    };
};

/* GPIO Configuration for LEDs and Button */
&gpio0 {
    status = "okay";
};

/* UART Configuration for Console */
&uart0 {
    status = "okay";
    current-speed = <115200>;
};

/* USB Configuration */
&usbd {
    status = "okay";
    cdc_acm_uart0: cdc_acm_uart0 {
        compatible = "zephyr,cdc-acm-uart";
        label = "CDC_ACM_0";
    };
};