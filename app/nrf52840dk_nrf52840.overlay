/*
 * Simple Device Tree Overlay for nRF52840DK
 * Minimal configuration for DFU boot with LEDs and button
 */

/ {
    aliases {
        led0 = &led0;
        led1 = &led1;
        led2 = &led2;
        led3 = &led3;
        sw0 = &button0;
    };
};

&gpio0 {
    status = "okay";
};

/* LEDs are already defined in the board DTS, just ensure they're enabled */
&led0 {
    status = "okay";
};

&led1 {
    status = "okay";
};

&led2 {
    status = "okay";
};

&led3 {
    status = "okay";
};

/* Button is already defined, just ensure it's enabled */
&button0 {
    status = "okay";
};